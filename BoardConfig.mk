#BOARD_WLAN_TI_STA_DK_ROOT := system/wlan/ti/sta_dk_4_0_4_32
#WIFI_DRIVER_MODULE_PATH := "/system/wifi/ar6000.ko"
#WIFI_DRIVER_MODULE_ARG := ""
#WIFI_DRIVER_MODULE_NAME := "ar6000"

ADDITIONAL_DEFAULT_PROPERTIES += ro.secure=0